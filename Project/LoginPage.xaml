                <VisualState x:Name="VistualStateMin0">
                    <VisualState.Setters>
                        <Setter Target="Username.(Width)" Value="180" />
                        <Setter Target="Username.(FontSize)" Value="26" />
                        <Setter Target="Username.(Height)" Value="50" />

                        <Setter Target="Password.(Width)" Value="180" />
